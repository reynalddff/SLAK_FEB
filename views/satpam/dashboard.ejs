<%- include ../partials/satpam_layout/header.ejs %>
<%- include ../partials/satpam_layout/sidebar.ejs %>

<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Dashboard</h1>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-12 col-sm-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h4>Daftar Permintaan Validasi Aduan Kehilangan</h4>
                        <button style="float:right" class="btn btn-primary text-left">Verifikasi
                            Kehilangan
                            <i class="fas fa-hands-helping"></i></button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Nama Pelapora</th>
                                        <th scope="col">Barang Hilang</th>
                                        <th scope="col">Tempat Barang Hilang</th>
                                        <th scope="col">Tanggal Barang Hilang</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>Mark</td>
                                        <td>Otto</td>
                                        <td>@mdo</td>
                                        <td>@mdo</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">2</th>
                                        <td>Jacob</td>
                                        <td>Thornton</td>
                                        <td>@fat</td>
                                        <td>@fat</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">3</th>
                                        <td>Larry</td>
                                        <td>the Bird</td>
                                        <td>@twitter</td>
                                        <td>@twitter</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h4>Daftar Permintaan Validasi Peminjaman Kunci</h4>
                        <button style="float:right" class="btn btn-primary text-left">Validasi Peminjaman
                            <i class="fas fa-key"></i></button>
                    </div>
                    <div class="card-body">
                        <% if (peminjaman_kunci.length) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Nama Peminjam</th>
                                        <th scope="col">No Telepon</th>
                                        <th scope="col">Ruangan</th>
                                        <th scope="col">Tanggal Pinjam</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% peminjaman_kunci.forEach((pinjam, index) => { %>
                                    <tr>
                                        <th scope="row"><%= index + 1 %></th>
                                        <td><%= pinjam.User.nama_user %></td>
                                        <td><%= pinjam.User.telp_user %></td>
                                        <td><%= pinjam.Kunci.nama_ruangan %></td>
                                        <td><%= pinjam.tanggal_pinjam %></td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <% } else { %>
                        <h3 class="text-center">Tidak ada permintaan validasi peminjaman kunci</h3>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<%- include ../partials/footer.ejs %>