<%- include ../../partials/admin_layout/header.ejs %> <%- include
../../partials/admin_layout/sidebar.ejs %>

<!-- Main Content -->
<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1>Manajemen User</h1>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card card-primary">
          <div class="card-header">
            <h4>Form Tambah User</h4>
          </div>
          <div class="card-body">
            <form
              action="/admin/manajemen_user/tambah"
              method="POST"
              enctype="multipart/form-data"
            >
              <div class="form-group">
                <label>Nama</label>
                <input
                  type="text"
                  class="form-control"
                  required
                  name="nama_user"
                />
              </div>
              <div class="form-group">
                <label>NIP/NIK</label>
                <input
                  type="number"
                  class="form-control"
                  required
                  name="username"
                />
              </div>
              <div class="form-group">
                <label>Password</label>
                <input
                  type="password"
                  class="form-control"
                  required
                  name="password"
                />
              </div>
              <div class="form-group">
                <label>No Handphone</label>
                <input
                  type="number"
                  class="form-control"
                  required
                  name="telp_user"
                />
              </div>
              <div class="form-group">
                <label>Email</label>
                <input
                  type="email"
                  class="form-control"
                  required
                  name="email"
                />
              </div>
              <div class="form-group">
                <label>Kategori User</label>
                <select
                  class="form-control text-capitalize"
                  name="RoleId"
                  required
                >
                  <option value="" class="text-capitalize"
                    >--Pilih Kategori--</option
                  >
                  <% roles.forEach(role => {%>
                  <option class="text-capitalize" value="<%=role.id%>">
                    <%=role.role%>
                  </option>
                  <% }) %>
                </select>
              </div>
              <div class="form-group">
                <label for="exampleFormControlFile1">Input Photo</label>
                <input
                  type="file"
                  name="foto_user"
                  class="form-control-file"
                  id="exampleFormControlFile1"
                />
                <small
                  >Foto harus memiliki format JPG/PNG/JPEG dan maksimal ukuran
                  10 MB</small
                >
              </div>
              <button class="btn btn-primary" style="float: right;">
                Tambah User
              </button>
              <a
                href="/admin/manajemen_user"
                class="btn btn-dark mr-3"
                style="float: right;"
                >Kembali</a
              >
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include ../../partials/footer.ejs %>
