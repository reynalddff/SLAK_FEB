<%- include ../../partials/admin_layout/header.ejs %> <%- include
../../partials/admin_layout/sidebar.ejs %>

<!-- Main Content -->
<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1>Manajemen User</h1>
    </div>
    <ul class="nav nav-pills mb-4">
      <li class="nav-item">
        <a class="nav-link" href="/admin/manajemen_user/edit/<%= user.id %>">Edit Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/admin/manajemen_user/edit/credentials/<%= user.id %>">Edit Akun</a>
      </li>
    </ul>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card card-primary">
          <div class="card-header">
            <h4>Form Tambah User</h4>
          </div>
          <div class="card-body">
            <form action="/admin/manajemen_user/edit/credentials/<%= user.id %>" method="POST">
              <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                  <div class="form-group">
                    <label>NIP/NIK</label>
                    <input type="number" class="form-control" value="<%=user.username%>" name="username" />
                    <% if(error.length > 0) { %>
                    <small class="text-danger"> <%= error %> </small>
                    <% } %>
                  </div>
                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" />
                  </div>
                </div>
              </div>
              <button class="btn btn-primary" style="float: right;">
                Update User
              </button>
              <a href="/admin/manajemen_user" class="btn btn-dark mr-3" style="float: right;">Kembali</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include ../../partials/footer.ejs %>