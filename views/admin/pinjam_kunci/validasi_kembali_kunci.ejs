<%- include ../../partials/admin_layout/header.ejs %>
<%- include ../../partials/admin_layout/sidebar.ejs %>

<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Permintaan Layanan: Pinjam Kunci</h1>
        </div>
        <ul class="nav nav-pills mb-4">
            <li class="nav-item">
                <a class="nav-link" href="/admin/pinjam_kunci/validasi_pinjam_kunci">Peminjaman Kunci Ruangan </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/admin/pinjam_kunci/validasi_kembali_kunci">Pengembalian Kunci
                    Ruangan <i class="fas fa-key"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/pinjam_kunci/daftar_kunci">Daftar Kunci Ruangan </a>
            </li>
        </ul>
        <% if (success.length > 0) { %>
        <div class="alert alert-primary alert-has-icon alert-dismissible show fade">
            <div class="alert-icon"><i class="fas fa-thumbs-up"></i></div>
            <div class="alert-body">
                <button class="close" data-dismiss="alert">
                    <span>Ã—</span>
                </button>
                <div class="alert-title">Success</div>
                <%= success %>
            </div>
        </div>
        <% } %>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h4>Daftar Permintaan Validasi Pengembalian Kunci</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Nama Peminjam</th>
                                        <th scope="col">No Telepon</th>
                                        <th scope="col">Ruangan</th>
                                        <th scope="col">Tanggal Pinjam</th>
                                        <th scope="col">Validasi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% peminjaman_kunci.forEach((pinjam, index) => { %>
                                    <tr>
                                        <th scope="row"><%= index + 1 %></th>
                                        <td><%= pinjam.User.nama_user %></td>
                                        <td><%= pinjam.User.telp_user %></td>
                                        <td><%= pinjam.Kunci.nama_ruangan %></td>
                                        <td><%= pinjam.tanggal_pinjam %></td>
                                        <% if (pinjam.status_peminjaman === 'dipinjam') { %>
                                        <td>
                                            <a class="btn btn-success btn-action" data-toggle="tooltip" title="Validasi"
                                                onclick="validasi_kunci('<%= pinjam.id %>')">Validasi Pengembalian
                                            </a>
                                        </td>
                                        <% } else { %>
                                        <td>
                                            <a href="pengajuan_aduan_komentar.html" class="btn btn-secondary disabled"
                                                disabled>Validasi
                                                Pengembalian</a>
                                        </td>
                                        <% } %>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<%- include ../../partials/footer.ejs %>

<script>
    function validasi_kunci(id) {
        let idPinjam = id;
        swal({
            title: "Yakin ingin menyetujui pengembalian kunci ini?",
            text: "Konfirmasi penyetujuan tidak dapat kembali lagi",
            icon: "warning",
            buttons: true,
            dangerMode: true
        }).then((willDelete) => {
            if (willDelete) {
                swal({
                    title: 'Informasi',
                    text: "Success menyetujui pengembalian kunci",
                    position: 'top-left',
                    icon: 'success',
                    buttons: false,
                    timer: 2000
                }).then((suksesDelete) => {
                    window.location.assign(`/admin/pinjam_kunci/validasi_kembali_kunci/${idPinjam}/`);
                })
            }
        })
    }
</script>