<%- include ../../partials/admin_layout/header.ejs %>
<%- include ../../partials/admin_layout/sidebar.ejs %>

<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Pengajuan Aduan</h1>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h4>Daftar Pengajuan Aduan Masuk</h4>
                    </div>
                    <div class="card-body">
                        <form method="get">
                            <div class="form-group">
                                <label>Nama</label>
                                <input type="text" class="form-control" value="<%= aduan.User.nama_user %>" disabled>
                            </div>
                            <div class="form-group">
                                <label>NIP/NIK</label>
                                <input type="text" class="form-control" value="<%= aduan.User.username %>" disabled>
                            </div>
                            <div class="form-group">
                                <label>No Handphone</label>
                                <input type="text" class="form-control" value="<%= aduan.User.telp_user %>" disabled>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control" value="<%= aduan.User.email %>" disabled>
                            </div>
                            <div class="form-group">
                                <label>Keluhan / Saran / Masukan / Kritik / Pertanyaan Umum</label>
                                <textarea class="form-control" rows="1" placeholder="<%= aduan.deskripsi_aduan %>"
                                    disabled></textarea>
                                <!-- <textarea name="" id="" cols="30" rows="10"></textarea> -->
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-md-6 col-sm-12">
                                    <div class="gallery gallery-fw" data-item-height="150">
                                        <div class="gallery-item" data-image="/images/news/img03.jpg"
                                            data-title="Image 1"></div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-12">
                                    <div class="gallery gallery-fw" data-item-height="150">
                                        <div class="gallery-item" data-image="/images/news/img07.jpg"
                                            data-title="Image 2"></div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6 col-sm-12">
                                    <div class="gallery gallery-fw" data-item-height="150">
                                        <div class="gallery-item" data-image="/images/news/img05.jpg"
                                            data-title="Image 3"></div>
                                    </div>
                                </div>
                            </div>
                            <a href="/admin/aduan_lapor" class="btn btn-dark" style="float: right;">Kembali</a>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h4>Penyelsaian Aduan</h4>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/admin/aduan_lapor/<%=aduan.id%>/edit_aduan">
                            <div class="form-group">
                                <label>Penyelsaian Aduan Deskripsi</label>
                                <textarea class="form-control" rows="1" name="tanggapan_aduan"></textarea>
                                <!-- <textarea name="" id="" cols="30" rows="10"></textarea> -->
                            </div>
                            <!-- beluma ada nanti nyusul -->
                            <!-- <div class="form-group">
                                <label for="">Upload Bukti</label>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="inputGroupFile01"
                                        aria-describedby="inputGroupFileAddon01">
                                    <label class="custom-file-label" for="inputGroupFile01">Choose
                                        file</label>
                                </div>
                            </div> -->
                            <button class="btn btn-primary" style="float: right;">
                                Edit Status Aduan</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<%- include ../../partials/footer.ejs %>