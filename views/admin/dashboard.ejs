<%- include ../partials/admin_layout/header.ejs %>
<%- include ../partials/admin_layout/sidebar.ejs %>

<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Dashboard</h1>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="card card-statistic-1">
                            <div class="card-icon bg-success">
                                <i class="fas fa-paper-plane"></i>
                            </div>
                            <div class="card-wrap">
                                <div class="card-header">
                                    <h4>Total Aduan Lapor</h4>
                                </div>
                                <div class="card-body">
                                    <%= allAduan %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="card card-statistic-1">
                            <div class="card-icon bg-danger">
                                <i class="fas fa-paper-plane"></i>
                            </div>
                            <div class="card-wrap">
                                <div class="card-header">
                                    <h4>Total Aduan Lapor (Belum)</h4>
                                </div>
                                <div class="card-body">
                                    <%= allAduanBelum %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="card card-statistic-1">
                            <div class="card-icon bg-success">
                                <i class="fas fa-hands-helping"></i>
                            </div>
                            <div class="card-wrap">
                                <div class="card-header">
                                    <h4>Total Aduan Hilang</h4>
                                </div>
                                <div class="card-body">
                                    <%= totalAduanHilang %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="card card-statistic-1">
                            <div class="card-icon bg-danger">
                                <i class="fas fa-hands-helping"></i>
                            </div>
                            <div class="card-wrap">
                                <div class="card-header">
                                    <h4>Total Aduan Hilang (Belum)</h4>
                                </div>
                                <div class="card-body">
                                    <%= aduanHilangBelum %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="card card-statistic-1">
                            <div class="card-icon bg-success">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="card-wrap">
                                <div class="card-header">
                                    <h4>Total Pengguna Aktif</h4>
                                </div>
                                <div class="card-body">
                                    <%= allUser %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="card card-statistic-1">
                            <div class="card-icon bg-danger">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="card-wrap">
                                <div class="card-header">
                                    <h4>Total Pengguna Yang Harus Divalidasi</h4>
                                </div>
                                <div class="card-body">
                                    <%= userIsNotValid %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Cari Data</h4>
                    </div>
                    <div class="card-body">
                        <div class="find-data">
                            <form action="/admin" method="get" id="find-data">
                                <input type="text" id="total_aduan_lapor" value="<%= aduan_lapor.total %>" hidden>
                                <input type="text" id="aduan_lapor_belum" value="<%= aduan_lapor.belum %>" hidden>
                                <input type="text" id="aduan_lapor_sudah" value="<%= aduan_lapor.sudah %>" hidden>
                                <input type="text" id="total_aduan_hilang" value="<%= aduan_hilang.total %>" hidden>
                                <input type="text" id="aduan_hilang_belum" value="<%= aduan_hilang.belum %>" hidden>
                                <input type="text" id="aduan_hilang_sudah" value="<%= aduan_hilang.sudah %>" hidden>
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <select class="form-control text-capitalize" name="tahun" id="tahun">
                                                <option value="semua" class="text-capitalize">Semua Tahun</option>
                                                <option class="text-capitalize" value="2020">2020</option>
                                                <option class="text-capitalize" value="2021">2021</option>
                                                <option class="text-capitalize" value="2022">2022</option>
                                                <option class="text-capitalize" value="2023">2023</option>
                                                <option class="text-capitalize" value="2024">2024</option>
                                                <option class="text-capitalize" value="2025">2025</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <select class="form-control text-capitalize" name="bulan" id="bulan">
                                                <option value="semua" class="text-capitalize">Semua Bulan</option>
                                                <option class="text-capitalize" value="01">Januari</option>
                                                <option class="text-capitalize" value="02">Februari</option>
                                                <option class="text-capitalize" value="03">Maret</option>
                                                <option class="text-capitalize" value="04">April</option>
                                                <option class="text-capitalize" value="05">Mei</option>
                                                <option class="text-capitalize" value="06">Juni</option>
                                                <option class="text-capitalize" value="07">Juli</option>
                                                <option class="text-capitalize" value="08">Agustus</option>
                                                <option class="text-capitalize" value="09">September</option>
                                                <option class="text-capitalize" value="10">Oktober</option>
                                                <option class="text-capitalize" value="11">November</option>
                                                <option class="text-capitalize" value="12">Desember</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label for=""></label>
                                            <button class="btn btn-primary">Cari Data</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <% if (data_bulan_ini) { %>
                        <h4>Data Aduan Lapor - <%= data_bulan_ini %>, <%= data_tahun_ini %></h4>
                        <% } else { %>
                        <h4>Data Aduan Lapor - Semua</h4>
                        <% } %>
                    </div>
                    <div class="card-body">
                        <div class="data-aduan">
                            <canvas id="aduan-lapor-chart" width="20" height="20"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <% if (data_bulan_ini) { %>
                        <h4>Data Aduan Kehilangan - <%= data_bulan_ini %>, <%= data_tahun_ini %></h4>
                        <% } else { %>
                        <h4>Data Aduan Kehilangan - Semua</h4>
                        <% } %>
                    </div>
                    <div class="card-body">
                        <div class="data-aduan">
                            <canvas id="aduan-kehilangan-chart" width="20" height="20"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <!-- <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Data Peminjaman Kunci</h4>
                    </div>
                    <div class="card-body">
                        <div class="data-aduan">
                            <canvas id="peminjaman-kunci-chart" width="20" height="20"></canvas>
                        </div>
                    </div>
                </div>
            </div> -->
        </div>
    </section>
</div>

<%- include ../partials/footer.ejs %>

<script>
    $(document).ready(function () {
        let total_aduan_lapor = $("#total_aduan_lapor").val();
        let aduan_lapor_belum = $("#aduan_lapor_belum").val();
        let aduan_lapor_sudah = $("#aduan_lapor_sudah").val();
        const getAduanLapor = () => {
            const label = ['Total Aduan', 'Belum Selesai', 'Sudah Selesai']
            const value = [total_aduan_lapor, aduan_lapor_belum, aduan_lapor_sudah];
            const ctx1 = document.getElementById('aduan-lapor-chart').getContext('2d');
            const chartAduanLapor = new Chart(ctx1, {
                type: 'doughnut',
                data: {
                    labels: label,
                    datasets: [{
                        data: value,
                        backgroundColor: [
                            'rgba(255, 206, 86, 0.8)', //kuning
                            'rgba(255, 99, 132, 0.8)', //merah
                            'rgba(54, 162, 235, 0.8)', //biru
                        ]
                    }],
                },
                options: {}
            });
        }
        let total_aduan_hilang = $("#total_aduan_hilang").val();
        let aduan_hilang_belum = $("#aduan_hilang_belum").val();
        let aduan_hilang_sudah = $("#aduan_hilang_sudah").val();
        const getAduanKehilangan = () => {
            const label = ['Total Aduan', 'Belum Selesai', 'Sudah Selesai']
            const value = [total_aduan_hilang, aduan_hilang_belum, aduan_hilang_sudah];
            const ctx2 = document.getElementById('aduan-kehilangan-chart').getContext('2d');
            const chartAduanKehilangan = new Chart(ctx2, {
                type: 'doughnut',
                data: {
                    labels: label,
                    datasets: [{
                        data: value,
                        backgroundColor: [
                            'rgba(255, 206, 86, 0.8)', //kuning
                            'rgba(255, 99, 132, 0.8)', //merah
                            'rgba(54, 162, 235, 0.8)', //biru
                        ]
                    }],
                },
                options: {}
            });
        }

        // const ctx3 = document.getElementById('peminjaman-kunci-chart').getContext('2d');
        // const chartPeminjamanKunci = new Chart(ctx3, {
        // type: 'doughnut',
        // data: {
        // labels: ['Red', 'Blue', 'Yellow'],
        // datasets: [{
        // data: [10, 20, 30],
        // backgroundColor: [
        // 'rgba(255, 99, 132, 0.8)',
        // 'rgba(54, 162, 235, 0.8)',
        // 'rgba(255, 206, 86, 0.8)',
        // ]
        // }],
        // },
        // options: {}
        // });

        getAduanLapor();
        getAduanKehilangan();

    });
</script>