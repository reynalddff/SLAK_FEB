<%- include ../../partials/karyawan_layout/header.ejs %>
<%- include ../../partials/karyawan_layout/sidebar.ejs %>

<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Pengajuan Aduan</h1>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="text-capitalize">Konfirmasi contact pelapor</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" action="/karyawan/aduan_lapor/konfirmasi">
                            <div class="form-group">
                                <label>No Handphone</label>
                                <input type="text" class="form-control" name="telp_user" value="<%=user.telp_user%>">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control" name="email" value="<%=user.email%>">
                            </div>
                            <button class="btn btn-primary" style="float: right;">Update & Selanjutnya</button>
                            <a href="/karyawan/aduan_lapor" class="mr-3 btn btn-dark" style="float: right;">Kembali</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<%- include ../../partials/footer.ejs %>