<%- include ../../partials/karyawan_layout/header.ejs %>
<%- include ../../partials/karyawan_layout/sidebar.ejs %>

<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Pengajuan Aduan</h1>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="text-capitalize">Form Pengajuan Aduan dan Layanan</h4>
                    </div>
                    <div class="card-body">
                        <form action="/karyawan/aduan_lapor/form" method="POST">
                            <div class="form-group">
                                <label for="">Judul Aduan</label>
                                <input class="form-control" name="judul_aduan"></input>
                            </div>
                            <div class="form-group">
                                <label for="">Lokasi aduan</label>
                                <input class="form-control" name="lokasi_aduan"></input>
                                <small>Harap isi "-" jika tidak ada lokasi</small>
                            </div>
                            <div class="form-group">
                                <label>Keluhan / Saran / Masukan / Kritik / Pertanyaan Umum</label>
                                <textarea class="form-control" rows="1" name="deskripsi_aduan"></textarea>
                            </div>
                            <div class="form-group">
                                <label>Tujuan Aduan</label>
                                <select class="form-control text-capitalize" name="tujuan_aduan" required>
                                    <option value="" class="text-capitalize">--Pilih Tujuan--</option>
                                    <% roles.forEach(role => {%>
                                    <option class="text-capitalize" value="<%=role.id%>">
                                        <%=role.role%>
                                    </option>
                                    <% }) %>
                                </select>
                            </div>
                            <!-- <div class="form-group">
                                <label for="inputFile">Upload Bukti ( Jika ada )</label>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="inputFile"
                                        aria-describedby="inputGroupFileAddon01">
                                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                </div>
                            </div> -->
                            <button class="btn btn-primary" style="float: right;">Kirim Aduan</button>
                            <a href="/karyawan/aduan_lapor/aduan_lapor_konfirmasi_contact" class="mr-3 btn btn-dark"
                                style="float: right;">Kembali</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<%- include ../../partials/footer.ejs %>