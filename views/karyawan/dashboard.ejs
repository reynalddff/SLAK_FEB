<%- include ../partials/karyawan_layout/header.ejs %>
<%- include ../partials/karyawan_layout/sidebar.ejs %>
<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Dashboard</h1>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-12">
                <div class="card card-success">
                    <div class="card-header">
                        <h4>Survey Terbaru</h4>
                    </div>
                    <div class="card-body text-justify" style="line-height: 1.6;">
                        Hi <span class="font-weight-bold">Reynald Daffa</span>, ada survey terbaru nih tentang penilaian
                        pelayanan di FEB UB.
                        Yuk isi survey nya untuk FEB UB guna menigkatkan mutu dan kualiatas pelayanan yang diberikan.
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-success">Isi Survey</button>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h4>Riwayat Pengajuan Aduan</h4>
                                <a class="btn btn-primary text-right" href="/karyawan/aduan_lapor">Mengajukan Aduan <i
                                        class="fas fa-paper-plane"></i></a>
                            </div>
                            <div class="card-body">
                                <% if (aduans.length) { %>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Deskripsi Aduan</th>
                                                <th scope="col">Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <% aduans.forEach((aduan, index) => { %>
                                                <th scope="row"><%=index + 1%></th>
                                                <td><%= aduan.deskripsi_aduan %></td>
                                                <% if (aduan.status_aduan === 'belum') { %>
                                                <td class="text-danger text-capitalize font-weight-bold">Belum <br>
                                                    diselsaikan
                                                </td>
                                                <% } else { %>
                                                <td class="text-primary text-capitalize font-weight-bold">Sudah <br>
                                                    diselsaikan
                                                </td>
                                                <% } %>
                                                <% }) %>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                <div class="text-center">
                                    <h3 class="mt-3 mb-5">Belum ada aduan yang diajukan </h3>
                                    <img src="/images/svg/undraw_empty.svg" style="width:30rem" alt="">
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h4>Riwayat Peminjaman Kunci</h4>
                                <button class="btn btn-primary text-right">Pinjam Kunci
                                    <i class="fas fa-key"></i></button>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Ruangan</th>
                                                <th scope="col">Tanggal Pinjam</th>
                                                <th scope="col">Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% peminjaman_kunci.forEach((pinjam, index) => { %>
                                            <tr>
                                                <th scope="row"> <%= index + 1 %> </th>
                                                <td> <%= pinjam.Kunci.nama_ruangan %> </td>
                                                <td> <%= tanggal_pinjam %> </td>
                                                <% if (pinjam.status_peminjaman === "dipinjam") { %>
                                                <td class="text-danger font-weight-bold">Masih dipinjam</td>
                                                <% } else { %>
                                                <td class="text-primary font-weight-bold">Sudah dikembalikan</td>
                                                <% } %>
                                            </tr>
                                            <% if (pinjam.status_peminjaman === "dipinjam") { %>
                                            <span class="badge badge-danger mb-3">Kamu belum mengembalikan kunci.</span>
                                            <% } %>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<%- include ../partials/footer.ejs %>